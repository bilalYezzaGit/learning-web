{
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npm install *)",
      "Bash(npx shadcn@latest *)",
      "Bash(npx next *)",
      "Bash(mkdir -p chantiers/*)",
      "Bash(mv chantiers/* chantiers/archive/*)"
    ],
    "deny": []
  },
  "hooks": {
    "sessionStart": [
      {
        "command": ".claude/hooks/load-chantier.sh"
      }
    ],
    "preCompact": [
      {
        "command": ".claude/hooks/save-chantier-state.sh"
      }
    ],
    "postToolUse": [
      {
        "matcher": {
          "tool": "Edit",
          "filePath": "src/**/*.{ts,tsx}"
        },
        "command": ".claude/hooks/lint.sh"
      },
      {
        "matcher": {
          "tool": "Write",
          "filePath": "src/**/*.{ts,tsx}"
        },
        "command": ".claude/hooks/lint.sh"
      }
    ]
  }
}
